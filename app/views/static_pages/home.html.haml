-if logged_in?
  .row
    %aside.col-md-4
      %section.user_info
        = render 'shared/user_info'
      %section.post_form
        = render 'shared/post_form'
    .col-md-8
      %h3 Post Feed
      = render 'shared/feed'
            
-else          
  .center.jumbotron
    %h1 Welcome to the Twitter Application
    = link_to "Sign up!", signup_path, class: "btn btn-lg btn-primary"
  = link_to image_tag("Twitter_logo.png", alt: "Twitter logo"), |
  'http://runescape.wikia.com/wiki/File:Twitter_logo-Update-Hints.gif'                          |